#ABUILD created by/создан: fat0troll, fat0troll at riseup.net 
#----------------------------- General vars --------------------------------------
#------------------------- Основные переменные -----------------------------------
pkgname=libqtbamf
pkgver=0.1
pkgbuild=1
arch=('auto')

shortdesc="Qt bindings for bamf"
#-ruler---|--------------------------------------------------------------------------|
longdesc=("Qt bindings for bamf"
)

source=("bzr:lp:bamf-qt")

patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="libs dev-libs"

#dependencies only needed to build package
build_deps=""

provides=""
conflicts=""

adddep=""
removedep=""

#for multi pkg abuild
pkglist=

#Set number of jobs while compliling, otherwise it'll be autodetected
#numjobs=1

#additional files should be copied into ${pkgdir}/usr/doc/${pkgname}-${pkgver} dir from sources
docs=
gendeps_blacklist=

#custom_opts: skip_validate skip_gendeps no_postperm no_strip
custom_opts=""

#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------

#ran before function build()
#запускается перед сборкой
before_build()
{
go_src_dir
# Some hardcoded stuff in CMakeLists.txt, agrh…
if [ "$ARCH" = "x86_64" ] ; then
	sed -i 's|lib/qt4/imports/bamf|lib64/qt/imports/bamf|' CMakeLists.txt || exit 1
	sed -i 's|lib/pkgconfig|lib64/pkgconfig|' CMakeLists.txt || exit 1
else
	sed -i 's|lib/qt4/imports/bamf|lib/qt/imports/bamf|' CMakeLists.txt || exit 1
fi
}

BUILD_SYSTEM="cmake"
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr \
-DCMAKE_BUILD_TYPE=RELEASE \
-DLIB_DIR=lib${LIBDIRSUFFIX} \
-DLIB_SUFFIX=${LIBDIRSUFFIX} \
../"

#ran after function build() 
#после сборки
after_build()
{
# lib64-related fix
if [ "$ARCH" = "x86_64" ] ; then
	sed -i 's/\/lib/\/lib64/' $pkgdir/usr/lib$LIBDIRSUFFIX/pkgconfig/libqtbamf.pc
fi
}
