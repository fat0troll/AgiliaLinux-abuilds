#----------------------------- General vars --------------------------------------
#------------------------- Основные переменные -----------------------------------
pkgname=perl-Net-DBus
pkgver=0.33.6
pkgbuild=1
arch=('auto')

shortdesc="Binding for DBus messaging protocol"
#-ruler---|--------------------------------------------------------------------------|
longdesc=("Binding for DBus messaging protocol"
)

source=("http://www.cpan.org/authors/id/D/DA/DANBERR/Net-DBus-$pkgver.tar.gz")

patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="libs dev-libs"

#dependencies only needed to build package
build_deps=""

provides=""
conflicts=""

adddep="perl-XML-Twig"
removedep=""

#for multi pkg abuild
pkglist=

#Set number of jobs while compliling, otherwise it'll be autodetected
#numjobs=1

#additional files should be copied into /usr/docs/${pkgname} dir from sources
docs=
gendeps_blacklist=

#custom_opts: skip_validate skip_gendeps no_postperm no_strip
custom_opts=""

#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------

#ran before function build()
#запускается перед сборкой
before_build()
{
echo ""
}

build()
{
cd  $srcdir/Net-DBus-$pkgver
PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || exit 1
make || exit 1
make install DESTDIR=$pkgdir || exit 1
find $pkgdir -name '.packlist' -delete
find $pkgdir -name '*.pod' -delete
}
#ran after function build() 
#после сборки
after_build()
{
echo ""
}
