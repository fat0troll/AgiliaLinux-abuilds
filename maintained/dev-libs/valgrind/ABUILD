#ABUILD created by/создан: fat0troll, fat0troll at riseup.net 
#----------------------------- General vars --------------------------------------
#------------------------- Основные переменные -----------------------------------
pkgname=valgrind
pkgver=3.6.1
pkgbuild=1
arch=('auto')

shortdesc="A tool to help find memory-management problems in programs"
#-ruler---|--------------------------------------------------------------------------|
longdesc=("A tool to help find memory-management problems in programs"
)

source=("http://valgrind.org/downloads/${pkgname}-${pkgver}.tar.bz2")

patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="libs dev-libs"

#dependencies only needed to build package
build_deps=""

provides=""
conflicts=""

adddep=""
removedep=""

#for multi pkg abuild
pkglist=

#Set number of jobs while compliling, otherwise it'll be autodetected
#numjobs=1

#additional files should be copied into ${pkgdir}/usr/doc/${pkgname}-${pkgver} dir from sources
docs=
gendeps_blacklist=

#custom_opts: skip_validate skip_gendeps no_postperm no_strip
custom_opts=""

#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------

#ran before function build()
#запускается перед сборкой
before_build()
{
go_src_dir
sed -i -e 's:^CFLAGS="-Wno-long-long":CFLAGS="$CFLAGS -Wno-long-long":' configure.in
}

build()
{
go_src_dir
burn_patches
if [ "$ARCH" = "x86_64" ] ; then
	./configure --prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --mandir=/usr/share/man --enable-only64bit
else
	./configure --prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --mandir=/usr/share/man
fi
make || exit 1
make DESTDIR=${pkgdir} install || exit 1
}


#ran after function build() 
#после сборки
after_build()
{
echo ""
}
