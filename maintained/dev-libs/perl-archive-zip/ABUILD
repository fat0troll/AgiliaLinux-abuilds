#ABUILD created by/создан: fat0troll, fat0troll at riseup.net 
#----------------------------- General vars --------------------------------------
#------------------------- Основные переменные -----------------------------------
pkgname=perl-Archive-Zip
pkgver=1.30
pkgbuild=1
arch=('auto')

shortdesc="perl interface to zip archives"
#-ruler---|--------------------------------------------------------------------------|
longdesc=("Provide a perl interface to ZIP archive files"
)

source=("http://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/Archive-Zip-${pkgver}.tar.gz")

patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="libs dev-libs"

#dependencies only needed to build package
build_deps=""

provides=""
conflicts=""

adddep=""
removedep=""

#for multi pkg abuild
pkglist=

#Set number of jobs while compliling, otherwise it'll be autodetected
#numjobs=1

#additional files should be copied into /usr/docs/${pkgname} dir from sources
docs=
gendeps_blacklist=

#custom_opts: skip_validate skip_gendeps no_postperm no_strip
custom_opts=""

#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------

#ran before function build()
#запускается перед сборкой
before_build()
{
echo ""
}

build()
{
go_src_dir
PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || exit 1
make || exit 1
make install DESTDIR=$pkgdir || exit 1
}


#ran after function build() 
#после сборки
after_build()
{
find $pkgdir -name perllocal.pod -delete
find $pkgdir -name .packlist -delete
}
