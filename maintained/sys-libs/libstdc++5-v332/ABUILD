#custom_opts: skip_validate skip_gendeps no_postperm no_strip
custom_opts=""

#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------

#ran before function build()
#запускается перед сборкой
before_build()
{
echo ""
}

build()
{
cd $startdir
mkdir -p $pkgdir/usr/lib/
cp $srcdir/usr/lib/*.so* $pkgdir/usr/lib/
}


#ran after function build() 
#после сборки
after_build()
{
echo ""
}
