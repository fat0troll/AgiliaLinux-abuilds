pkgname=pyopencl
pkgver=0.92
pkgbuild=1
arch=('auto')

shortdesc="A complete, object-oriented language binding of OpenCL to Python"
#-ruler---|--------------------------------------------------------------------------|
longdesc=("A complete, object-oriented language binding of OpenCL to Python"
)

source=("http://pypi.python.org/packages/source/p/pyopencl/pyopencl-${pkgver}.tar.gz")

patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="libs dev-python"

#dependencies only needed to build package
build_deps=""

provides=""
