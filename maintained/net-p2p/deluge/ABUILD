#{
#echo ""
#}

BUILD_SYSTEM="python"

MAKE_WORD="python setup.py build"

BUILD_KEYS=


#ran after function build() 
#после сборки
after_build()
{
	install -D -m644 deluge/data/pixmaps/deluge.svg "${pkgdir}"/usr/share/pixmaps/deluge.svg
	mkdir -p $pkgdir/etc/{init.d,conf.d}
	install -D -m755 $filedir/deluged.init $pkgdir/etc/init.d/deluged
	install -D -m644 $filedir/deluged.conf $pkgdir/etc/conf.d/deluged
}
