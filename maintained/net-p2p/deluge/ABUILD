pkgname=deluge
pkgver=1.3.2
pkgbuild=1
arch=('auto')

shortdesc="A bittorrent client written with python and pygtk"
#-ruler---|--------------------------------------------------------------------------|
longdesc=("A bittorrent client written with python and pygtk"
)

source=("http://download.deluge-torrent.org/source/${pkgname}-${pkgver}.tar.bz2")

patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="network net-p2p"

#dependencies only needed to build package
build_deps=""

provides=""
conflicts=""

adddep="pyOpenSSL pyxdg twisted libtorrent-rasterbar>=0.14 chardet xdg-utils pysetuptools"
removedep=""

#for multi pkg abuild
pkglist=

#Set number of jobs while compliling, otherwise it'll be autodetected
#numjobs=1

