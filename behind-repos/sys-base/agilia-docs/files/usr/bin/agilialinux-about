#!/bin/bash
if [ "x$GNOME_DESKTOP_SESSION_ID" != "x" -a -x /usr/bin/yelp ]; then
	www_browser="/usr/bin/yelp"
else
	www_browser="xdg-open"
fi
for lang in `echo $LANG | tr ':' ' ' | cut -d '_' -f 1` ; do
	file="/usr/share/agilialinux/about/index-$lang.html"
	if [ -f "$file" ]; then
		$www_browser $file
		exit 0
	fi
done

if [ -f /usr/share/agilialinux/about/index.html ]; then
	$www_browser /usr/share/agilialinux/about/index.html
	exit 0
fi

echo "No about file in system! Aborting..."
exit 1
